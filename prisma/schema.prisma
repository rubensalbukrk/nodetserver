generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id Int @id @default(autoincrement())
  name String
  email String
  phone Int?
  address String
}

model Product {
  id Int @id @default(autoincrement())
  title String
  descrition String
  price Int
  descount Int
  pricebase Int?
  isAvaiable Boolean?
  createAt DateTime @default(now())
}


model Post {
  id Int @id @default(autoincrement())
  title String
  descrition String
  imgUrl String
  createAt DateTime @default(now())
  updateAt DateTime @default(now())
}